{
  "name": "secretario-ai",
  "version": "1.0.0",
  "description": "Secretario AI - Grabador de audio con transcripción automática",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "audio",
    "recording",
    "microphone"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "form-data": "^4.0.4"
  },
  "build": {
    "appId": "com.secretarioai.app",
    "productName": "Secretario AI",
    "directories": {
      "output": "build"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "preload.js",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Secretario AI",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Secretario AI",
      "uninstallDisplayName": "Secretario AI",
      "license": "LICENSE.txt"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
